<link rel="stylesheet" href="../public/css/style.css" />

{{#if productos}}
<h1>Productos</h1>
<div id="containerProductos" class="containerProd">

    {{#each productos}}
     <div id={{this.id}} class="containerItem">
            <h2>{{this.nombre}}</h2>
            <p><b>Codigo:</b> {{this.codigo}}</p>
            <p><b>Marca:</b> {{this.marca}}</p>
            <p><b>Precio: $</b>{{this.precio}}</p>
            <p><b>Unidades:</b> {{this.unidades}}</p>
            <p><b>Cantidad:</b> {{this.cantidad}}</p>
            <p><b>Categoria:</b> {{this.categoria}}</p>
            <button id={{this.id}} class='eliminar'> Eliminar </button>
        </div>
    {{/each}}
</div>
{{else}}
<h2>No se ha encontrado ningun producto</h2>
{{/if}}

<script src="../public/js/script.js"></script>